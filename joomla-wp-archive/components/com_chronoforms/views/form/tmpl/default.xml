<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Chronoforms Display Form" option="Display Form">
		<help key = "Display Form" />
		<message>
			Display Form
		</message>
	</layout>

	<!-- Add fields to the parameters object for the layout. -->
	<state name="params">
		<!-- Basic options. -->
		<params name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
			<param name="formname" type="text" description="Enter your form name" label="Form Name"></param>
			<param name="event" type="text" description="Enter your form's event to be loaded, if left empty then the 'load' event will be loaded, enter the event name without 'On', e.g: for 'OnSubmit' please enter 'submit'" label="Event"></param>
		</params>
	</state>
</metadata>