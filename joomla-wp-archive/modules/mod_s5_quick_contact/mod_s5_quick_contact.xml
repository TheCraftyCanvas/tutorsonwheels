		<param name="sendtext" type="text" default="Send Message" label="Text for send button" />
		<param name="width" type="text" default="80%" label="Width for text boxes (can be px or %)" description="Width of all text boxes." />
		<param name="height" type="text" default="55px" label="Height for text area (can be px or %)" description="Height for text area." />
		<param name="thankyou" type="text" default="Your email is now being submitted - Thank you!" label="Message displayed when submitting a successful email." />
		<param name="emailerror" type="text" default="Your email address is not valid, please check again - Thank you!" label="Message displayed when submitting an incorrectly formatted email address." />
		<param name="notcomplete" type="text" default="All fields are required, please complete the form - Thank you!" label="Message displayed when either the name, email or subject fields are blank." />
		<param name="spamerror" type="text" default="Your spam verification answer is incorrect." label="Message displayed when the spam verification field is wrong." />
